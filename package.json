{
  "name": "lms-op-system",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "api-gateway",
    "auth-service"
  ],
  "scripts": {
    "dev": "npm run prisma:generate && concurrently \"npm run dev:auth\" \"npm run dev:gateway\"",
    "dev:auth": "cd auth-service && npm run dev",
    "dev:gateway": "cd api-gateway && npm run dev",
    "build": "npm run prisma:generate && npm run build --workspaces",
    "start": "npm run start --workspaces",
    "prisma:generate": "prisma generate",
    "prisma:migrate": "prisma migrate deploy",
    "prisma:studio": "prisma studio"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.0.3",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "http-proxy-middleware": "^2.0.6",
    "jsonwebtoken": "^9.0.2"
  },
  "devDependencies": {
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.13",
    "@types/express": "^4.17.17",
    "@types/http-proxy-middleware": "^1.0.0",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/node": "^18.15.11",
    "concurrently": "^8.2.2",
    "prisma": "^5.22.0",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.0.4"
  }
} 