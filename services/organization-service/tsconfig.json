{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "./dist",
    "baseUrl": "../../..",
    "paths": {
      "@shared/*": ["micro-services/utils/*"]
    },
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": [
    "src/**/*",
    "../../utils/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/*.test.ts"
  ]
}